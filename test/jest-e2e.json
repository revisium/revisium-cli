{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "..",
  "testEnvironment": "node",
  "testRegex": "test/.*.e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "roots": ["<rootDir>/src", "<rootDir>/test"],
  "testPathIgnorePatterns": ["/node_modules/"],
  "moduleDirectories": ["node_modules", "<rootDir>"]
}
